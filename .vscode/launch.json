  "version": "0.2.0",
  "configurations": [
    {
      "args": [
        "--profile-temp",
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "name": "启动扩展",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "npm: dev",
      "request": "launch",
      "type": "extensionHost"
    },
    {
      "args": [
        "--profile-temp",
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "name": "启动扩展 (Release)",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "npm: build",
      "request": "launch",
      "type": "extensionHost"
    }
  ]
}
